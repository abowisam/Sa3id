<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="end"
    android:layoutDirection="rtl"
    tools:context=".UserActivities.GradesCalculator"
    >

    <include layout="@layout/navigation_layout"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UserActivities.MainActivity"
        android:background="@drawable/board_bg"
        >


        <include layout="@layout/toolbar_layout" />




            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:context=".UserActivities.MainActivity"
                android:background="@drawable/board_bg"
                >

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="@string/grades_calculator"
                    android:textSize="22sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/rpt_bold"
                    />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="32dp"
                    android:hint="الموضوع"
                    app:fontFamily="@font/rpt_bold"
                    android:layoutDirection="rtl"
                    >

                    <AutoCompleteTextView
                        android:layoutDirection="rtl"
                        android:id="@+id/autoCompleteTextView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="none"
                        tools:text="رياضيات"
                        android:fontFamily="@font/rpt_bold"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:id="@+id/radioButtonsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    />

                <LinearLayout
                    android:id="@+id/dynamicViewsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    />

                <Button
                    android:id="@+id/calculateButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="20dp"
                    android:fontFamily="@font/rpt_bold"

                    android:padding="12dp"
                    android:text="حساب العلامة"
                    android:textColor="@color/black"
                    android:textSize="18sp" />


                <TextView
                    android:id="@+id/resultTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="النتيجة هنا"
                    android:fontFamily="@font/rpt_bold"
                    />

            </LinearLayout>

    </LinearLayout>
    <include
        layout="@layout/bottom_sheet_to_include"
        tools:visibility="gone"
        />
</androidx.drawerlayout.widget.DrawerLayout>